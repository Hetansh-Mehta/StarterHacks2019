<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_marginBottom="5sp"
    android:layout_marginStart="2sp"
    android:layout_marginLeft="2sp"
    android:layout_marginRight="5sp"
    android:layout_marginEnd="5sp"
    android:layout_marginTop="0sp"
    tools:context=".EmergencyListView">


    <ImageButton
        android:id="@+id/imageButton_topleft"
        android:layout_width="wrap_content"
        android:layout_height="700dp"
        android:layout_marginLeft="2sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"
        android:layout_weight="1"
        app:srcCompat="@drawable/fireimg"
        android:layout_marginStart="2sp"
        android:layout_marginEnd="5sp"
        />

    <ImageButton
        android:id="@+id/imageButton_topright"
        android:layout_width="wrap_content"
        android:layout_height="700dp"
        android:layout_marginLeft="2sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"
        android:layout_weight="1"
        app:srcCompat="@drawable/health"
        android:layout_marginEnd="5sp"
        android:layout_marginStart="2sp" />


    <ImageButton
        android:id="@+id/imageButton_bottomleft"
        android:layout_width="wrap_content"
        android:layout_height="700dp"
        android:layout_marginLeft="2sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"
        android:layout_weight="1"
        app:srcCompat="@drawable/torontopolice"
        android:layout_marginEnd="5sp"
        android:layout_marginStart="2sp" />

    <ImageButton
        android:id="@+id/imageButton_bottomright"
        android:layout_width="wrap_content"
        android:layout_height="700dp"
        android:layout_marginLeft="2sp"
        android:layout_marginTop="0sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"
        android:layout_weight="1"
        app:srcCompat="@drawable/healthimg"
        android:layout_marginEnd="5sp"
        android:layout_marginStart="2sp" />

</LinearLayout>