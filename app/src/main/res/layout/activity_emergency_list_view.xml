<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_marginBottom="0sp"
    android:layout_marginStart="0sp"
    android:layout_marginLeft="0sp"
    android:layout_marginRight="0sp"
    android:layout_marginEnd="0sp"
    android:layout_marginTop="0sp"
    tools:context=".EmergencyListView">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:background="@color/design_default_color_primary_dark"
        android:text="Emergenc" />

    <ImageButton
        android:id="@+id/imageButton_topleft"
        android:layout_width="320px"
        android:layout_height="290px"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginStart="2sp"
        android:layout_marginLeft="2sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"
        android:layout_weight="1"
        app:srcCompat="@drawable/fireimg" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="30dp"
        android:text="Fire Emergency" />

    <ImageButton
        android:id="@+id/imageButton_topright"
        android:layout_width="320px"
        android:layout_height="290px"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="2sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"
        android:layout_weight="1"
        app:srcCompat="@drawable/health"
        android:layout_marginEnd="5sp"
        android:layout_marginStart="2sp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="30dp"
        android:text="Medical Emergency" />

    <ImageButton
        android:id="@+id/imageButton_bottomleft"
        android:layout_width="320px"
        android:layout_height="290px"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="2sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"
        android:layout_weight="1"
        app:srcCompat="@drawable/torontopolice"
        android:layout_marginEnd="5sp"
        android:layout_marginStart="2sp" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="30dp"
        android:text="Crime" />

    <ImageButton
        android:id="@+id/imageButton_bottomright"
        android:layout_width="320px"
        android:layout_height="211px"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="2sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"
        android:layout_weight="1"
        app:srcCompat="@drawable/healthimg"
        android:layout_marginEnd="5sp"
        android:layout_marginStart="2sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="30dp"
        android:text="Health and Wellness" />

</LinearLayout>